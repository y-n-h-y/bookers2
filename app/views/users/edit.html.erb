  <div class="text-danger">
  <% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
  </div>

  <main>
    <div class='container'>
      <div class='row'>
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		    <h1>User&thinsp;info</h1>
  		    <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <%= f.label :Name %>
            <%= f.text_field :name, class:"d-block form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :Image %>
            <%= f.attachment_field :profile_image, class:"d-block" %>
          </div>
          <div class="form-group">
            <%= f.label :Introduction %>
            <%= f.text_area :introduction, class:"d-block form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update User', class:"btn btn-success" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>