<h2>New&thinsp;Book</h2>

<%= form_with model:@book, local:true do |f| %>
<div class="form-group">
  <%= f.label :Title %>
  <%= f.text_field :title, class:"d-block" %>
</div>
<div class="form-group">
  <%= f.label :Opinion %>
  <%= f.text_area :body, class:"d-block" %>
</div>
<div class="form-group">
  <%= f.submit 'Create Book' %>
</div>

<% end %>